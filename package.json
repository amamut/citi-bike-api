{
    "name": "city-bike-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "prestart": "npm run build",
        "start": "export DB_URI=mongodb://root:example@mongo && node index.js",
        "start:dev": "export ENV=dev DEBUG=1 && node index.js",
        "build": "tsc",
        "watch": "tsc -w",
        "test": "export DB_COLLECTION=testLocations ENV=dev DEBUG=1 && jest --runInBand",
        "dev": "concurrently --kill-others --prefix \"[{name}]\" --names \"TSC,GQL\" \"yarn watch\" \"nodemon --inspect --exec 'yarn start:dev'\""
    },
