        "body-parser": "^1.19.0",
        "bodyparser-json-error": "^1.0.0",
        "express": "^4.17.1",
        "mongodb": "^3.3.4",
        "morgan": "^1.9.1",
        "source-map-support": "^0.5.16",
        "tslib": "^1.10.0",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@shelf/jest-mongodb": "^1.1.3",
